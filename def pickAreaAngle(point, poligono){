def pickAreaAngle(point, poligono){
	soma = 0;
	lines = []
	for p in poligono:
		v = (p.x - point.x , p.y - point.y)
		lines.append(v)
	
	for i in range(len(lines) - 1):
		cos_ang = (lines[i][0] * lines[i+1][0] + lines[i][1] * lines[i+1][1]) / 
					( sqrt(lines[i][0]**2 + lines[i][1]**2) * sqrt(lines[i+1][0]**2 + lines[i+1][1]**2))
		
		ang = math.acos(cos_ang)
		soma += ang

	if soma == 360:
		return True;
	else:
		return False;


}